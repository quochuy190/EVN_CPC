<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_home_banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v4.view.ViewPager>

    <ImageView
        android:id="@+id/img_bg_banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/spr_gradient_banner"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guild_home_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.23" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pading_10dp"
        android:layout_marginRight="@dimen/pading_10dp"
        app:cardCornerRadius="@dimen/pading_10dp"
        app:cardElevation="@dimen/dp7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guild_home_1">

        <LinearLayout
            android:paddingLeft="@dimen/dp5"
            android:paddingRight="@dimen/dp5"
            android:paddingTop="@dimen/pading_10dp"
            android:paddingBottom="@dimen/pading_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spr_bg_blue_right_to_left"
            android:orientation="vertical"
         >

            <TextView
                android:id="@+id/txt_fulname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helve"
                android:padding="@dimen/dp1"
                android:text="Mã khách hàng"
                android:textColor="@color/White"
                android:textSize="@dimen/txt_15sp" />

            <TextView
                android:id="@+id/txt_makh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helve"
                android:padding="@dimen/dp1"
                android:text="NGUYỄN VĂN A"
                android:textAllCaps="true"
                android:textColor="@color/White"
                android:textSize="@dimen/txt_15sp" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helve"
                android:padding="@dimen/dp1"
                android:maxLines="2"
                android:text="Số 1 Phùng Chí Kiên - Phú Đô - Cầu Giấy - Hà Nội"
                android:textColor="@color/White"
                android:textSize="@dimen/txt_14sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintStart_toStartOf="parent">

    </android.support.v4.view.ViewPager>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.035"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_info"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        app:tabPadding="2dp">


    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_info_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout_home">

    </android.support.v4.view.ViewPager>

</android.support.constraint.ConstraintLayout>